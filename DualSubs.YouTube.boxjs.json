{
	"id": "DualSubs.app.sub",
	"name": "🍿️ DualSubs",
	"author": "@DualSubs",
	"description": "流媒体平台字幕增强及双语模块",
	"icon": "https://avatars.githubusercontent.com/u/100578089?&v=4",
	"repo": "https://github.com/DualSubs",
	"apps": [
		{
			"id": "DualSubs.YouTube",
			"name": "🍿️ DualSubs: ▶ YouTube",
			"descs_html": [
				"请参照<a href=\"https://github.com/DualSubs/DualSubs-YouTube\">DualSubs-YouTube</a>的使用说明进行配置",
				"填写完成后别忘点击此页面底端右下角的\"保存\"。"
			],
			"keys": [
				"@DualSubs.YouTube.Settings",
				"@DualSubs.YouTube.Caches"
			],
			"settings": [
				{
					"id": "@DualSubs.YouTube.Settings.Switch",
					"name": "功能开关",
					"val": true,
					"type": "boolean",
					"desc": "是否启用此平台修改功能"
				},
				{
					"id": "@DualSubs.YouTube.Settings.Language",
					"name": "首选语言（兼容）：",
					"val": "AUTO",
					"type": "selects",
					"desc": "选择后会将此语言添加为额外的字幕语言",
					"items": [
						{
							"key": "AUTO",
							"label": "自动"
						}
					]
				},
				{
					"id": "@DualSubs.YouTube.Settings.Type",
					"name": "字幕类型（兼容）",
					"val": "Google",
					"type": "selects",
					"desc": "请选择要替换的字幕类型，会为不兼容的播放器替换为此字幕类型",
					"items": [
						{
							"key": "Official",
							"label": "官方"
						}
					]
				},
				{
					"id": "@DualSubs.YouTube.Settings.Translate.ShowOnly",
					"name": "翻译字幕: 只显示翻译字幕",
					"val": false,
					"type": "boolean",
					"desc": "开启后仅显示翻译字幕，不做字幕合并操作"
				},
				{
					"id": "@DualSubs.YouTube.Settings.Position",
					"name": "双语字幕位置",
					"val": "Forward",
					"type": "radios",
					"items": [
						{
							"key": "Forward",
							"label": "第二行"
						},
						{
							"key": "Reverse",
							"label": "第一行"
						}
					],
					"desc": "首选语言所在的行数"
				}
			],
			"author": "@DualSubs",
			"repo": "https://github.com/DualSubs/DualSubs-YouTube/tree/main",
			"icons": [
				"https://github.com/DualSubs/DualSubs-YouTube/raw/main/database/icon.png",
				"https://github.com/DualSubs/DualSubs-YouTube/raw/main/database/icon.png"
			]
		}
	]
}
